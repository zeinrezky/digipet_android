<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.child.pet.dialog.ImageContainerItemFragment">

        <ImageView
            android:id="@+id/ivImageItem"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nove"
            android:maxLines="1"
            android:layout_marginTop="@dimen/space_x3"
            android:textColor="@color/navy"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ivImageItem"
            app:layout_constraintStart_toStartOf="@+id/ivImageItem"
            app:layout_constraintTop_toBottomOf="@+id/ivImageItem"
            tools:text="Yellow Skin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>