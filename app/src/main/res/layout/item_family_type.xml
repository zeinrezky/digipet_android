<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_x1"
    android:layout_marginStart="@dimen/space_half"
    android:layout_marginEnd="@dimen/space_half"
    android:layout_marginTop="@dimen/space_x1">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvFamilyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/space_x5_half"
        app:cardCornerRadius="@dimen/space_x7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/light_purple_1"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/space_x2_half"
            android:paddingTop="@dimen/space_x1"
            android:paddingEnd="@dimen/space_x2_half"
            android:paddingBottom="@dimen/space_x1">

            <ImageView
                android:id="@+id/ivFamilyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_oval_orange" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvFamilyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/sofia_pro_semibold"
                android:layout_marginStart="@dimen/space_x1"
                android:letterSpacing="0"
                android:maxLines="3"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@id/ivFamilyType"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivFamilyType"
                app:layout_constraintTop_toTopOf="@id/ivFamilyType"
                tools:text="Kids" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>