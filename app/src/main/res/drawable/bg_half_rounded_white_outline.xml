<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-10dp"
        android:left="-10dp"
        android:right="-10dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <corners
                android:topRightRadius="@dimen/space_x3"
                android:topLeftRadius="@dimen/space_x3"/>

            <stroke
                android:width="7dp"
                android:color="@color/white" />

            <solid android:color="#00FFFFFF" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

</layer-list>